<div class="h-full w-full fixed inset-0 overflow-hidden">
  <video class="h-full w-full object-cover absolute inset-0" playsinline autoplay loop muted src="{{ section.settings.video_url }}">
  </video>
  <div class="z-10 flex items-center justify-center absolute top-0 left-0 right-0">
    <div class="w-48">
      {% include 'responsive-image', image: section.settings.logo %}
    </div>
  </div>
  <section class="bg-backdrop z10 absolute inset-0 flex items-center justify-center text-center text-white">

    <div class="max-w-lg w-full px-6 pt-16">
      <h1 class="text-xl uppercase">{{ section.settings.header }}</h1>
      <div class="">
        <p class="mt-4 text-lg">{{ section.settings.body_top }}</p>
        <p class="mt-20">{{ section.settings.body_bottom }}</p>
        <div class="mt-6 h-16 max-w-xs mx-auto w-full">
          {% include 'klaviyo-form'
            list_id: section.settings.list_id,
            wrapper_class: 'flex items-center justify-center w-full'
            input_class: 'mr-4 bg-transparent flex-grow border-b border-solid border-white'
            button_class: 'whitespace-no-wrap'
            actions_class: blank
            messages_class: 'mt-2'
            cta: section.settings.cta
            success_message: section.settings.success
            placeholder: section.settings.placeholder
          %}

        </div>
      </div>
    </div>
  </section>

</div>

{% schema %}
  {
    "name": "Splash Page",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      },
      {
        "type": "url",
        "id": "video_url",
        "label": "Video URL",
        "info": "Upload your video in the Admin file settings and copy the generated URL to this field."
      },
      {
        "type": "text",
        "id": "header",
        "label": "Header"
      },
      {
        "type": "textarea",
        "id": "body_top",
        "label": "Body Line 1"
      },
      {
        "type": "textarea",
        "id": "body_bottom",
        "label": "Body Line 2"
      },
      {
        "type": "header",
        "content": "Klaviyo Form"
      },
      {
        "type": "text",
        "id": "list_id",
        "label": "Lisd ID",
        "default": "JEWGC4"
      },
      {
        "type": "text",
        "id": "placeholder",
        "label": "Placeholder Text",
        "default": "Your email"
      },
      {
        "type": "text",
        "id": "success",
        "label": "Success Message",
        "default": "Thank you, we'll be in touch shortly."
      },
      {
        "type": "text",
        "id": "cta",
        "label": "Button Text",
        "default": "Sign Up"
      }
    ]
  }
{% endschema %}